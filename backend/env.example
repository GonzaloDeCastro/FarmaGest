NODE_ENV=development

# Base de datos PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=farmagest
DB_USER=farmagest_user
DB_PASSWORD=farmagest123

# JWT Secret (cambiar en producción)
